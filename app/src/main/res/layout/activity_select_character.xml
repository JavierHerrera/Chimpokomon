<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chimpokomon.com.example.pep.chimpokomon.SelectCharacterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fondo_select_character"
        android:layout_alignParentStart="true"
        android:background="@drawable/img_streetfighter"
        />




    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/reciclador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/icon1_Player"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/reciclador"
        />

    <ImageView
        android:id="@+id/icon2_Player"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/icon1_Player"
        />

    <ImageView
        android:id="@+id/icon3_Player"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/icon2_Player"

        />


</RelativeLayout>
