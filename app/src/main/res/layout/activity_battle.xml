<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EBEBEB"
    tools:context="chimpokomon.com.example.pep.chimpokomon.Battle"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/textoBatalla"
        android:background="@android:color/holo_blue_dark"
        android:text="12111111111111111111111111222222222222222222222222222312"
        />
    <FrameLayout
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutImgHPCPU"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/imageCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_pengin"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:id="@+id/progressBarHPCPU"
            android:background="@android:color/holo_red_light"

            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones2"
        android:layout_above="@+id/textoBatalla">

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack3"
            android:text="1111"
            android:layout_weight=".5"
            />

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack4"
            android:text="2"
            android:layout_weight=".5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones"
        android:layout_above="@+id/layoutBotones2">

        <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_attack1"
        android:text="1111"
        android:layout_weight=".5"
        />

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack2"
            android:text="2"
            android:layout_weight=".5"
            />

    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutImgHPPlayer"
        android:layout_above="@id/layoutBotones"
        >

        <ImageView
            android:id="@+id/imagePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_mousetik"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:id="@+id/progressBarHPPlayer"
            android:background="@android:color/holo_red_light"
            />

    </FrameLayout>



</RelativeLayout>
