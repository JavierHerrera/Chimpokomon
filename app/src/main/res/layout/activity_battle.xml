<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EBEBEB"
    tools:context="chimpokomon.com.example.pep.chimpokomon.BattleActivity"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/textoBatalla"
        android:background="#b9d2d9"
        android:text="text"
        android:textColor="#383838"
        />
    <FrameLayout
        android:id="@+id/layoutImgHPCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/textViewNombreChinpoCPU"
            android:text="@string/textViewNombreChinpoCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#39393d"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <ImageView
            android:id="@+id/imageCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_pengin"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones2"
        android:layout_above="@+id/textoBatalla">

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack3"
            android:text="1111"
            android:layout_weight=".5"
            />

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack4"
            android:text="2"
            android:layout_weight=".5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones"
        android:layout_above="@+id/layoutBotones2">

        <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_attack1"
        android:text="1111"
        android:layout_weight=".5"
        />

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack2"
            android:text="2"
            android:layout_weight=".5"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/layoutImgPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutBotones"
        >

        <ImageView
            android:id="@+id/imagePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_mousetik"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layoutHPPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_info"
        android:padding="7dp"
        android:layout_above="@id/layoutBotones"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@+id/layoutImgPlayer"
        >

        <TextView
            android:id="@+id/textViewNombreChinpoPlayer1"
            android:text="NOMBRE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:background="@drawable/border_barra_hp"
            android:id="@+id/fondoHPbar"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            >


        </View>

        <TextView
            android:id="@+id/textViewHPChinpoPlayer1"
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1dp"
            android:textColor="#1dff3b"
            />

        <ProgressBar
            android:id="@+id/progressBarHPPlayer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progres_bar_color"
            android:progress="50"
            android:layout_toEndOf="@+id/textViewHPChinpoPlayer1"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            />

        <TextView
            android:id="@+id/textViewHPViewChinpoPlayer1"
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:layout_below="@id/progressBarHPPlayer"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            />



    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layoutHPCPU"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border_info"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/layoutImgHPCPU"
        >

        <ProgressBar
            android:id="@+id/progressBarHPCPU"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:progressDrawable="@drawable/progres_bar_color"
            android:layout_marginLeft="15dp"
            android:progress="50"
            />
        <TextView
            android:id="@+id/textViewHPChinpoCPU"
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#39393d"


            />
        <TextView
            android:id="@+id/textViewHPViewChinpoCPU"
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textColor="#39393d"


            />



    </FrameLayout>



</RelativeLayout>
