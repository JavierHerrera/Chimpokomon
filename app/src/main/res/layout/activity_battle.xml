<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context="chimpokomon.com.example.pep.chimpokomon.BattleActivity"
    >

    <FrameLayout
        android:id="@+id/layoutImgHPCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        >

        <ImageView
            android:id="@+id/imagePlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_penguin"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones2"
        android:layout_above="@+id/textoBatalla">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack3"
            android:text="1111"
            android:layout_weight=".5"
            android:theme="@style/button_posion"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack4"
            android:text="2"
            android:layout_weight=".5"
            android:theme="@style/button_flying"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBotones"
        android:layout_above="@+id/layoutBotones2">

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack1"
            android:text="1111"
            android:layout_weight=".5"
            android:theme="@style/button_bug"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            />

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_attack2"
            android:text="2"
            android:layout_weight=".5"
            android:theme="@style/button_water"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/layoutImgPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutBotones"
        >

        <ImageView
            android:id="@+id/imagePlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gridview_shoe"
            android:layout_margin="20dp"
            android:contentDescription="@null"
            />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/layoutHPPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_info"
        android:padding="7dp"
        android:layout_above="@id/layoutBotones"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/layoutImgPlayer"
        >
        <TextView
            android:id="@+id/textViewNombreChinpoPlayer1"
            android:text="NOMBRE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            />
        <View
            android:id="@+id/fondoHPbarPlayer1"
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:background="@drawable/border_barra_hp"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            >
        </View>
        <TextView
            android:id="@+id/textViewHPChinpoPlayer1"
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1dp"
            android:textColor="#1dff3b"
            />
        <ProgressBar
            android:id="@+id/progressBarHPPlayer1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progres_bar_color_hp"
            android:progress="50"
            android:layout_toEndOf="@+id/textViewHPChinpoPlayer1"
            android:layout_below="@id/textViewNombreChinpoPlayer1"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            />
        <ProgressBar
            android:id="@+id/progressBarSpeedPlayer1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:progressDrawable="@drawable/progres_bar_color_speed"
            android:progress="10"
            android:layout_below="@+id/progressBarHPPlayer1"
            android:layout_alignLeft="@+id/progressBarHPPlayer1"
            android:layout_alignRight="@+id/progressBarHPPlayer1"
            />
        <TextView
            android:id="@+id/textView_HPmax_Player1"
            android:text="/120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:layout_below="@id/progressBarHPPlayer1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/textView_HPcurrent_Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_HPmax_Player1"
            android:layout_below="@id/progressBarHPPlayer1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:text="120"
            android:textColor="#39393d"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutHPCPU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_info"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/layoutImgHPCPU"

        >

        <TextView
            android:id="@+id/textViewNombreChinpoPlayer2"
            android:text="NOMBRE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            />
        <View
            android:id="@+id/fondoHPbarPlayer2"
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:background="@drawable/border_barra_hp"
            android:layout_below="@id/textViewNombreChinpoPlayer2"
            >
        </View>
        <TextView
            android:id="@+id/textViewHPChinpoPlayer2"
            android:text="HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textViewNombreChinpoPlayer2"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1dp"
            android:textColor="#1dff3b"
            />
        <ProgressBar
            android:id="@+id/progressBarHPPlayer2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progres_bar_color_hp"
            android:progress="50"
            android:layout_toEndOf="@+id/textViewHPChinpoPlayer2"
            android:layout_below="@id/textViewNombreChinpoPlayer2"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            />
        <ProgressBar
            android:id="@+id/progressBarSpeedPlayer2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:progressDrawable="@drawable/progres_bar_color_speed"
            android:progress="60"
            android:layout_below="@+id/progressBarHPPlayer2"
            android:layout_alignLeft="@+id/progressBarHPPlayer2"
            android:layout_alignRight="@+id/progressBarHPPlayer2"
            />
        <TextView
            android:id="@+id/textViewHPViewChinpoCPU"
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39393d"
            android:layout_below="@id/progressBarHPPlayer2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1pt"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutHPPlayer"
        android:layout_alignParentEnd="true">


        <ImageView
            android:id="@+id/img_Seleccion1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_mousetik"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/img_Seleccion2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_mousetik"
            android:layout_toEndOf="@id/img_Seleccion1"
            />
        <ImageView
            android:id="@+id/img_Seleccion3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_mousetik"
            android:layout_toEndOf="@id/img_Seleccion2"
            android:clickable="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutHPCPU"
        android:layout_alignParentEnd="true">


        <ImageView
            android:id="@+id/img_Seleccion4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_shoe"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/img_Seleccion5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_penguin"
            android:layout_toEndOf="@id/img_Seleccion4"
            />
        <ImageView
            android:id="@+id/img_Seleccion6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gridview_lambtron"
            android:layout_toEndOf="@id/img_Seleccion5"
            android:clickable="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto_informacion_atacarP2"
        android:text="1"
        android:textColor="#ed2809"
        android:textStyle="bold"
        android:textSize="15sp"
        android:visibility="invisible"
        android:layout_alignBottom="@id/layoutHPCPU"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto_informacion_atacarP1"
        android:text="2"
        android:textColor="#ed2809"
        android:textStyle="bold"
        android:textSize="15sp"
        android:visibility="invisible"
        android:layout_alignTop="@id/layoutHPPlayer"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_fullRestore"
        android:text="Restore"
        android:layout_weight=".5"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/button_attackCPU"
        android:layout_alignBottom="@+id/button_attackCPU"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_attackCPU"
        android:text="CPU"
        android:layout_weight=".5"
        android:layout_toStartOf="@id/button_fullRestore"
        android:allowUndo="false"
        android:focusableInTouchMode="false"
        android:visibility="visible"
        android:layout_below="@+id/layoutImgHPCPU" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textoBatalla"
        android:background="#b9d2d9"
        android:text="text"
        android:textColor="#383838"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        />


</RelativeLayout>
