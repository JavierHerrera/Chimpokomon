<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/decelerate_interpolator"
    android:shareInterpolator="true"
    android:fillAfter="true"
    android:startOffset="100">

    <translate
        android:duration="40"
        android:startOffset="0"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="40"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="-20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="80"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="-20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="120"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="160"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="200"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="-20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="300"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="-20"
        android:toYDelta="0"
        />

    <translate
        android:duration="40"
        android:startOffset="240"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="20"
        android:toYDelta="0"
        />
</set>